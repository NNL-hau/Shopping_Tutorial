<style>
    .reveal {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity .6s ease, transform .6s ease;
    }

        .reveal[data-reveal="left"] {
            transform: translateX(-24px);
        }

        .reveal[data-reveal="right"] {
            transform: translateX(24px);
        }

        .reveal.is-visible {
            opacity: 1;
            transform: none;
        }

    .hero-section .btn-primary:hover {
