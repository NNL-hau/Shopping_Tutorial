@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">
<link href="
https://cdn.jsdelivr.net/npm/sweetalert2@11.16.0/dist/sweetalert2.min.css
" rel="stylesheet">
<link href="~/css/prettyPhoto.css" rel="stylesheet">
<link href="~/css/price-range.css" rel="stylesheet">
<link href="~/css/animate.css" rel="stylesheet">
<link href="~/css/main.css" rel="stylesheet">

<link rel="stylesheet" href="https://code.jquery.com/ui/1.14.1/themes/base/jquery-ui.css">

<link href="~/css/responsive.css" rel="stylesheet">
<!--[if lt IE 9]>
<script src="js/html5shiv.js"></script>
<script src="js/respond.min.js"></script>
<![endif]-->
<link rel="shortcut icon" href="images/ico/favicon.ico">
<link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
<link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
<link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
<link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
<style>
    /* Căn giữa form đăng nhập */
    #login-form {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        width: 100%;
    }

    /* Tăng kích thước form */
    .login-form {
        background: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        width: 310%; /* Tăng kích thước form */
    }

        /* Căn giữa nội dung trong form */
        .login-form h2 {
            text-align: center;
            font-weight: bold;
            color: #333;
        }

    .form-group {
        margin-bottom: 15px;
        font-size: 130%;
    }

    .form-control {
        height: 45px; /* Tăng chiều cao input */
        border-radius: 8px;
        font-size: 16px;
    }


    .btn-primary {
        width: 100%;
        height: 45px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        background: linear-gradient(90deg, #fbc2eb, #a6c1ee) !important;
        border: none;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #fbc2eb, #a6c1ee) !important;
        }

    .btn-outline-danger {
        width: 100%;
        height: 45px;
        font-size: 16px;
        border-radius: 8px;
    }

    .text-center a {
        font-size: 130%;
    }

</style>

<section id="login-form">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-form p-4 shadow-sm rounded">
                    <h2 style=" font-size: 210%;" class="text-center mb-4">Đăng nhập tài khoản</h2>

                    <!-- Hiển thị lỗi validation -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form asp-action="Login" asp-controller="Account">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <!-- Tên đăng nhập -->
                        <div class="form-group">
                            <label for="UserName">Tên đăng nhập</label>
                            <input asp-for="UserName" class="form-control" id="UserName" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="UserName" class="text-danger" />
                        </div>

                        <!-- Mật khẩu -->
                        <div class="form-group">
                            <label for="Password">Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>

                        <!-- Nút đăng nhập -->
                        <button type="submit" class="btn btn-primary btn-block mt-3">Đăng nhập</button>

                        <!-- Liên kết đăng nhập bằng Google -->
                        <div class="text-center mt-3">
                            <a asp-action="LoginByGoogle" asp-controller="Account" class="btn btn-outline-danger btn-block">
                                <i class="fab fa-google"></i> Đăng nhập bằng Google
                            </a>
                        </div>

                        <!-- Liên kết tạo tài khoản và quên mật khẩu -->
                        <div class="mt-3 text-center">
                            <a asp-action="Create" asp-controller="Account" class="text-muted">Tạo tài khoản mới</a> |
                            <a asp-action="ForgotPass" asp-controller="Account" class="text-muted">Quên mật khẩu</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
