@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link href="~/css/bootstrap.min.css" rel="stylesheet">
<link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.16.0/dist/sweetalert2.min.css" rel="stylesheet">
<link href="~/css/prettyPhoto.css" rel="stylesheet">
<link href="~/css/price-range.css" rel="stylesheet">
<link href="~/css/animate.css" rel="stylesheet">
<link href="~/css/main.css" rel="stylesheet">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.14.1/themes/base/jquery-ui.css">
<link href="~/css/responsive.css" rel="stylesheet">

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    /* VIDEO BACKGROUND */
    .video-bg-wrap {
        position: fixed;
        inset: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -2;
        background: #000;
    }

        .video-bg-wrap video {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            filter: brightness(0.8) saturate(1.05);
        }

    .video-overlay {
        position: fixed;
        inset: 0;
        z-index: -1;
        background: rgba(0,0,0,0.25);
    }

    /* CENTER */
    #login-form {
        position: fixed;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
        z-index: 2;
    }

    /* GLASS FORM */
    .login-form {
        width: 420px;
        max-width: 92vw;
        padding: 28px 28px 22px;
        background: rgba(255,255,255,0.18);
        border: 1px solid rgba(255,255,255,0.28);
        border-radius: 16px;
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        box-shadow: 0 18px 50px rgba(0,0,0,0.30);
    }

        .login-form h2 {
            text-align: center;
            font-weight: 800;
            color: rgba(255,255,255,0.95);
            letter-spacing: .2px;
            text-shadow: 0 4px 16px rgba(0,0,0,0.35);
        }

    .form-group {
        margin-bottom: 14px;
        font-size: 120%;
        color: rgba(255,255,255,0.92);
    }

    /* INPUT: BỎ GIẢI TRẮNG + FIX AUTOFILL */
    .login-form .form-control {
        height: 46px;
        border-radius: 12px !important;
        background: rgba(255,255,255,0.10) !important;
        border: none !important;
        outline: none !important;
        box-shadow: none !important;
        color: rgba(255,255,255,0.95) !important;
        font-size: 16px;
    }

        .login-form .form-control::placeholder {
            color: rgba(255,255,255,0.65);
        }

        .login-form .form-control:focus {
            background: rgba(255,255,255,0.14) !important;
            border: none !important;
            outline: none !important;
            box-shadow: none !important;
            color: rgba(255,255,255,0.95) !important;
        }

    /* Chrome autofill nền trắng -> ép lại */
    .login-form input:-webkit-autofill,
    .login-form input:-webkit-autofill:hover,
    .login-form input:-webkit-autofill:focus {
        -webkit-text-fill-color: rgba(255,255,255,0.95) !important;
        transition: background-color 9999s ease-in-out 0s !important;
        box-shadow: 0 0 0 1000px rgba(255,255,255,0.10) inset !important;
        border: none !important;
    }

    /* LOGIN BUTTON: bo tròn như nút Google */
    .btn-primary {
        width: 100%;
        height: 46px;
        font-size: 16px;
        font-weight: 800;
        border-radius: 12px !important;
        border: 1px solid rgba(255,255,255,0.35);
        background: linear-gradient(90deg, rgba(124,198,255,0.95), rgba(190,132,255,0.95)) !important;
        color: #fff !important;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25);
        transition: transform .15s ease, filter .15s ease, box-shadow .15s ease;
    }

        .btn-primary:hover {
            filter: brightness(1.06);
            transform: translateY(-1px);
            box-shadow: 0 18px 34px rgba(0,0,0,0.30);
        }

        .btn-primary:active {
            transform: translateY(0);
            filter: brightness(0.98);
        }

    /* GOOGLE BUTTON */
    .btn-outline-danger {
        width: 100%;
        height: 46px;
        font-size: 16px;
        border-radius: 12px;
        background: rgba(255,255,255,0.14);
        border: 1px solid rgba(255,255,255,0.30);
        color: rgba(255,255,255,0.92);
    }

        .btn-outline-danger:hover {
            background: rgba(255,255,255,0.20);
            color: rgba(255,255,255,0.98);
        }

    /* khoảng cách giữa 2 nút */
    .google-wrap {
        margin-top: 18px;
    }

    /* Links */
    .mt-3.text-center a {
        font-size: 115%;
        color: rgba(255,255,255,0.85) !important;
        text-decoration: none;
    }

        .mt-3.text-center a:hover {
            text-decoration: underline;
            color: rgba(255,255,255,0.98) !important;
        }
</style>

<!-- VIDEO BACKGROUND -->
<div class="video-bg-wrap">
    <video autoplay muted loop playsinline preload="auto">
        <source src="~/images/ee.mp4" type="video/mp4" />
    </video>
</div>
<div class="video-overlay"></div>

<section id="login-form">
    <div class="login-form">
        <h2 style="font-size: 210%;" class="text-center mb-4">Đăng nhập tài khoản</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <form asp-action="Login" asp-controller="Account">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group">
                <label for="UserName">Tên đăng nhập</label>
                <input asp-for="UserName" class="form-control" id="UserName" placeholder="Nhập tên đăng nhập" autocomplete="off" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Password">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Nhập mật khẩu" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-3">Đăng nhập</button>

            <div class="text-center google-wrap">
                <a asp-action="LoginByGoogle" asp-controller="Account" class="btn btn-outline-danger btn-block">
                    <i class="fab fa-google"></i> Đăng nhập bằng Google
                </a>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Create" asp-controller="Account" class="text-muted">Tạo tài khoản mới</a> |
                <a asp-action="ForgotPass" asp-controller="Account" class="text-muted">Quên mật khẩu</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
