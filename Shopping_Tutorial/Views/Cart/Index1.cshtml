@using Shopping_Tutorial.Models.ViewModels
@model CartItemViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Views/Cart/cart.css" />

<h4>🛒 Giỏ hàng của bạn</h4>

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a asp-controller="Home" class="active">Trang chủ</a></li>
                <li class="active"><h4>Cửa hàng thương mại điện tử</h4></li>
            </ol>
        </div>

        <div class="table-responsive cart_info">
            <table class="table table-bordered table-striped">
                <thead class="cart_menu">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CartItems.Any())
                    {
                        foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td><a href="">@item.ProductName</a></td>
                                <td><img src="~/images/@item.Image" height="80" /></td>
                                <td>@item.Price.ToString("#,##0") VNĐ</td>
                                <td>
                                    <div style="display: flex; justify-content: center; align-items: center; gap: 5px;">
                                        <a class="btn btn-sm btn-danger" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ProductId">-</a>
                                        <input type="text" class="cart_quantity_input text-center" value="@item.Quantity" readonly style="width: 50px;" />
                                        <a class="btn btn-sm btn-success" asp-controller="Cart" asp-action="Increase" asp-route-id="@item.ProductId">+</a>
                                    </div>
                                </td>
                                <td>@(@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString("#,##0")) VNĐ</td>

                                <td>
                                    <a class="btn btn-sm btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId">Xóa</a>
                                </td>
                            </tr>
                        }

                        <tr>
                            <td colspan="4" class="text-right"><strong>Tổng cộng:</strong></td>
                            <td colspan="2">@Model.GrandTotal.ToString("#,##0") VNĐ</td>
                        </tr>
                        <tr>
                            <td colspan="4" class="text-right"><strong>Phí vận chuyển:</strong></td>
                            <td colspan="2">@Model.ShippingPrice.ToString("#,##0") VNĐ</td>
                        </tr>
                        <tr>
                            <td colspan="6">
                                <form class="form-inline">
                                    🔖 Mã giảm giá:
                                    <input type="text" class="form-control coupon-value" />
                                    <input type="button" value="Áp dụng" class="btn btn-sm btn-primary btn-apply-coupon" />
                                    <span class="text text-success">@Model.CouponCode</span>
                                </form>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="6" class="location-section">
                                <div class="form-group">
                                    <label>Tỉnh thành</label>
                                    <select class="form-control" id="tinh">
                                        <option value="0">Tỉnh thành</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Quận huyện</label>
                                    <select class="form-control" id="quan">
                                        <option value="0">Quận huyện</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Phường xã</label>
                                    <select class="form-control" id="phuong">
                                        <option value="0">Phường xã</option>
                                    </select>
                                </div>
                                <button type="button" class="btn btn-primary btn-add-shipping">🚚 Tính phí vận chuyển</button>
                                <a asp-action="DeleteShipping" asp-controller="Cart" class="btn btn-link">❌ Xóa vận chuyển</a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="6">
                                <div class="checkout-wrapper">
                                    <div class="left-actions">
                                        <a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Clear">🗑️ Xóa toàn bộ</a>
                                    </div>

                                    <div class="right-actions">
                                        @if (User.Identity?.IsAuthenticated ?? false)
                                        {
                                            if (Model.ShippingPrice <= 0)
                                            {
                                                <div>
                                                    <a class="btn btn-secondary btn-sm disabled">💸Thanh toán khi Nhận hàng</a>
                                                    <span class="text text-danger">⚠️ Hãy tính phí vận chuyển trước khi đặt hàng.</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <a class="btn btn-primary btn-sm" onclick="return confirm('Bạn xác nhận muốn đặt hàng?')" asp-controller="Checkout" asp-action="Checkout">💸Thanh toán khi Nhận hàng</a>

                                                <div class="payment-buttons">
                                                    <form method="POST" asp-action="CreatePaymentMoMo" asp-controller="Payment">
                                                        <input type="hidden" name="Amount" value="@Model.GrandTotal" />
                                                        <input type="hidden" name="OrderInfo" value="Thanh toán MoMo cho đơn hàng!" />
                                                        <input type="hidden" name="FullName" value="@User.Identity.Name" />
                                                        <button class="btn btn-danger" type="submit">📱 Thanh toán qua MoMo</button>
                                                    </form>

                                                    <form asp-action="CreatePaymentUrlVnpay" asp-controller="Payment" method="post">
                                                        <input type="hidden" name="Name" value="@User.Identity.Name" />
                                                        <input type="hidden" name="Amount" value="@Model.GrandTotal" />
                                                        <input type="hidden" name="OrderDescription" value="Thanh toán đơn hàng qua Vnpay tại HungShop" />
                                                        <input type="hidden" name="OrderType" value="other" />
                                                        <button class="btn btn-success" type="submit">💳 Thanh toán qua VNPAY</button>
                                                    </form>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>


                    }
                    else
                    {
                        <tr>
                            <td colspan="6"><h4 class="text-center">Giỏ hàng của bạn đang trống</h4></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>



@section Scripts {
    <script>
        $(".btn-apply-coupon").click(function () {
            var coupon_value = $(".coupon-value").val();
            $.ajax({
                type: "POST",
                url: "@Url.Action("GetCoupon", "Cart")",
                data: { coupon_value: coupon_value },
                success: function (result) {
                    Swal.fire(result.message);
                    if (result.success) location.reload();
                }
            });
        });

        $(document).ready(function () {
            $(".btn-add-shipping").click(function () {
                var tinh = $("#tinh option:selected").text();
                var quan = $("#quan option:selected").text();
                var phuong = $("#phuong option:selected").text();

                if (!tinh || !quan || !phuong) {
                    Swal.fire("Vui lòng chọn đầy đủ thông tin.");
                } else {
                    $.post("@Url.Action("GetShipping", "Cart")", { tinh, quan, phuong }, function () {
                        location.reload();
                    });
                }
            });

            // Load tỉnh/quận/phường từ API esgoo
            $.getJSON('https://esgoo.net/api-tinhthanh/1/0.htm', function (data_tinh) {
                $.each(data_tinh.data, function (_, val) {
                    $("#tinh").append('<option value="' + val.id + '">' + val.full_name + '</option>');
                });
                $("#tinh").change(function () {
                    $.getJSON(`https://esgoo.net/api-tinhthanh/2/${$(this).val()}.htm`, function (data_quan) {
                        $("#quan").html('<option>Quận huyện</option>');
                        $.each(data_quan.data, function (_, val) {
                            $("#quan").append('<option value="' + val.id + '">' + val.full_name + '</option>');
                        });
                        $("#quan").change(function () {
                            $.getJSON(`https://esgoo.net/api-tinhthanh/3/${$(this).val()}.htm`, function (data_phuong) {
                                $("#phuong").html('<option>Phường xã</option>');
                                $.each(data_phuong.data, function (_, val) {
                                    $("#phuong").append('<option value="' + val.id + '">' + val.full_name + '</option>');
                                });
                            });
                        });
                    });
                });
            });
        });
    </script>
}
