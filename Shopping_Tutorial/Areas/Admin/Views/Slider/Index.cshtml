<style>
    .btn-warning {
        background: linear-gradient(90deg, #fbc2eb, #a6c1ee) !important;
    }

    .btn-primary {
        background: linear-gradient(90deg, #fbc2eb, #a6c1ee) !important;
    }

</style>
<h3>Danh sách Slider</h3>
<a asp-action="Create" asp-controller="Slider" class="btn btn-primary">Thêm Slider</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên Slider</th>
            <th scope="col">Mô tả Slider</th>
            <th scope="col">Sản phẩm của Slider</th>
            <th scope="col">Quản lý Slider</th>
            <th scope="col">Chỉnh sửa</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>

                <td><img src="~/images/@item.Image" width="120" height="80" /></td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Slider" asp-route-Id="@item.Id">Chính sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Slider" asp-route-Id="@item.Id">Xóa</a>
                </td>

            </tr>
        }

    </tbody>
</table>
