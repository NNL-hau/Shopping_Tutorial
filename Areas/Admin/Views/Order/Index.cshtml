@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order Listed";
}
<style>
    /* Cải thiện kiểu giao diện cho bảng và các phần tử */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc;
        padding: 20px;
    }

    h3 {
        color: #3399FF;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
        border: 1px solid #ccc;
        background-color: #fff;
    }

        .table thead {
            background: linear-gradient(90deg, #fbc2eb, #a6c1ee); /* Màu bong bóng chat */
            color: white;
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }



    .btn {
        padding: 10px 15px;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #3399FF;
        border-color: #3399FF;
        color: white;
    }

        .btn-primary:hover {
            background-color: #267ACC;
            border-color: #267ACC;
        }

    .btn-danger {
        background-color: #ff4d4d;
        border-color: #ff4d4d;
        color: white;
    }

        .btn-danger:hover {
            background-color: #cc0000;
            border-color: #cc0000;
        }

    .text-success {
        color: #28a745;
    }

    .text-primary {
        color: #3399FF;
    }

    .text-danger {
        color: #dc3545;
    }

    th {
        color: black;
    }

    .text-warning {
        color: #ffc107;
    }

    /* Cải thiện bảng trạng thái đơn hàng */
    .order-status {
        font-weight: bold;
    }

</style>
<h3>List Order</h3>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Mã đơn hàng</th>
            <th scope="col">Giá vận chuyển</th>
            <th>Địa chỉ</th>
          

            <th scope="col">Tên người đặt</th>
            <th scope="col">Phương thức đặt hàng</th>
            
            <th scope="col">Ngày đặt hàng</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Chỉnh sửa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>#</th>
                <th scope="row">@item.OrderCode</th>

                <th scope="row">@item.ShippingCost.ToString("#,##0 VNĐ")</th>
                <td>@item.ContactUser</td>
                
                <td>@item.UserName</td>
                <td>
                    @if (item.PaymentMethod=="COD"||item.PaymentMethod ==null)
                    {
                        @* <span class="text text-primary">@item.PaymentMethod</span> *@
                        <span class="text text-primary">Giao dịch trực tiếp</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đã chuyển khoản Qua <a asp-route-orderId="@item.PaymentMethod" asp-action="PaymemtMoMoInfo" asp-controller="Order">@item.PaymentMethod</a></span>
                    }
                </td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy ")</td>

                
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else if (item.Status == 2)
                    {
                        <span class="text text-primary">Đã xử lý</span>
                    }
                    else if (item.Status == 3)
                    {
                        <span class="text text-warning">Đang giao hàng</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đã hủy</span>
                    }

                </td>

                <td>
                    <a asp-action="ViewOrder"
                       class="btn btn-sm"
                       style="background-color: #3399FF; border-color: #3399FF; color: white; font-weight: bold;"
                       asp-controller="Order"
                       asp-route-ordercode="@item.OrderCode">Xem</a>

                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xóa</a>

                </td>

            </tr>
        }

    </tbody>
</table>