@model ProductQuantityModel
@{
    ViewData["title"] = "Create Quantity";
    decimal total_quantities = 0;
    decimal key = 1;
}
<style>
    .btn-warning {
        background: linear-gradient(90deg, #fbc2eb, #a6c1ee) !important;
    }

    .btn-primary {
        background: linear-gradient(90deg, #fbc2eb, #a6c1ee) !important;
    }

</style>
<h4>Thêm số lượng sản phẩm</h4>
<div class="col-md-9">
    <form asp-action="StoreProductQuantity" asp-controller="Product" enctype="multipart/form-data">
        
        
        <input type="hidden" name="ProductId" value="@ViewBag.Id"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Số lượng</label>
            <input value="1" min="1" max="2000" asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger" />
        </div>



       

        <div class="form-group">
            <button class="btn btn-primary">Thêm </button>
        </div>
    </form>
    <h3>Thông tin thêm số lượng sản phẩm hiện tại : </h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Lần</th>
                <th>Sản phẩm đã thêm</th>

                <th>Ngày thêm</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productQuantity in ViewBag.ProductByQuantity)

            {

                total_quantities += productQuantity.Quantity;
                <tr>
                    <td>@key</td>
                    <td>@productQuantity.Quantity</td>

                    <td>@productQuantity.DateTime</td>
                </tr>
                key++;
            }
            <tr>
                <td>Tổng số lượng sản phẩm đã thêm : @total_quantities</td>
            </tr>
        </tbody>
    </table>



    <a asp-controller="Product" asp-action="Index">Trở lại trang danh sách sản phẩm</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
