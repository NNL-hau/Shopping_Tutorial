@model ProductModel
@{
    ViewData["title"] = "Create Product";
}
<style>
    .btn-warning {
        background: linear-gradient(90deg, #fbc2eb, #a6c1ee) !important;
    }

    .btn-primary {
        background: linear-gradient(90deg, #fbc2eb, #a6c1ee) !important;
    }

</style>
<h4>Edit Product</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" /> <!-- Thêm dòng này để gửi ID -->
        <div class="form-group">
            <label>Tên sản phẩm</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Giá</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Giá Vốn</label>
            <input asp-for="CapitalPrice" class="form-control" />
            <span asp-validation-for="CapitalPrice" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <!-- Đảm bảo rằng textarea có id là editor -->
            <textarea asp-for="Description" class="form-control" id="editor"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Category</label>
            <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
                <option>--Choose a category</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Brand</label>
            <select asp-for="BrandID" class="form-control" asp-items="ViewBag.Brands">
                <option>--Choose a brand</option>
            </select>
            <span asp-validation-for="BrandID" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Image</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger" />
            <td><img src="~/images/@Model.Image" width="120"  /></td>
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Hoàn tất sửa</button>
        </div>
    </form>

    <a asp-action="Index">Back to list Product</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- CKEditor CDN -->
    <script src="https://cdn.ckeditor.com/ckeditor5/38.1.0/classic/ckeditor.js"></script>
    <script>
        // Khởi tạo CKEditor cho trường mô tả
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
